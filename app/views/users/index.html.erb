<div id="all-users">
<div class="container">
  <div class="page-header">
    <h1>Users list</h1>
    <p>Find your friend and add to your friend list</p>
    <p><%= link_to 'Back to homepage', root_path, :class => 'btn btn-primary' %></p>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if !is_friend(current_user, user) %>
            <button type="button" class="btn btn-success btn-add " data-id="<%= user.id %>" data-loading-text="Adding...">Add friend</button>
          <% else %>
            <button class="btn btn-warning disabled" disabled="disabled">Added</button>
          <% end %>
        </td>
      </tr>
      <% end %>
      <tr></tr>
    </tbody>
  </table>
</div>
</div>
