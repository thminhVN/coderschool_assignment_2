<div id="home">
	<div class="container">
		<div class="jumbotron">
			<h1>Welcome, <%= current_user.name%></h1>
			<a href="<%= new_message_path %>" class="btn btn-primary btn-lg"><i class="fa fa-send"></i> New message</a>
			<a href="<%= users_path %>" class="btn btn-success btn-lg"><i class="fa fa-users"></i> Add friends</a>
			<a href="<%= sent_path %>" class="btn btn-warning btn-lg"><i class="fa fa-envelope"></i> Sent messages</a>
		</div>
		<% if @received_messages != nil %>
		<ul class="timeline">
			<% @received_messages.each.with_index do |message, key| %>
			<li class="<%= key % 2 != 0 ? 'timeline-inverted' : '' %>">
				<a href="<%= message_path :id => message.id %>">
				<div class="timeline-badge"><i class="<%= message.status == 0 ? 'fa fa-folder' : 'fa fa-folder-open' %>"></i></div>
				<div class="timeline-panel">
					<div class="timeline-heading">
						<h4 class="timeline-title">
						<%= message.status == 0 ? 'Unread message' : 'Read message' %>
						</h4>
						<p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> at <%= message.created_at.strftime("%Y, %B-%d %H:%M:%S")%> by <%= message.sender.name%></small></p>
					</div>
					<div class="timeline-body">
					</div>
				</div>
				</a>
			</li>
			<% end %>
		</ul>
		<% end %>
	</div>
</div>
